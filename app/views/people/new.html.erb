<title>Add New Person</title>
<%= form_tag :action => 'create' %>
<p>
	<label for="firstname">First Name</label>:
	<%= text_field 'person', 'firstname' %>
</p>
<p>
	<label for="lastname">Last Name</label>:
	<%= text_field 'person', 'lastname' %>
</p>
<p>
	<label for="twittername">http://www.twitter.com/</label>
	<%= text_field 'person', 'twittername' %>
</p>
<p>
	<label for="tumblrname">http://<label>
	<%= text_field 'person', 'tumblrname' %>
	<label for "tumblrname">.tumblr.com/</label>
</p>
<p>
	<label for="homecity">Home City</label>:
	<%= collection_select(:city, :id, City.all, :id, :name, {:prompt => "Select City"})%>
</p>
<%= submit_tag "Create" %>
<%= link_to 'Back', {:action => 'index'}%>